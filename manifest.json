{
  "name": "Crypto Thread Writer",
  "description": "Write a Twitter Thread on any crypto topic!",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "48": "assets/48.png",
    "72": "assets/72.png",
    "96": "assets/96.png",
    "144": "assets/144.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Generate Twitter Thread"
  },
  "background": {
    "service_worker": "scripts/contextMenuServiceWorker.js"
  },
  "host_permissions": ["https://*/*"],
  "permissions": ["contextMenus", "tabs", "storage"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["scripts/content.js"]
    }
  ]
}
